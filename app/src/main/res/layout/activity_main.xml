<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.akhilasdeveloper.span_grid_view.SpanGridView
        android:id="@+id/span_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:gridColor="@color/grid_bg_color"
        app:lineColor="@color/line_color"
        app:lineWidth=".1dp"
        app:maxResolution="10dp"
        app:minResolution="1dp"
        app:scale=".5" />


    <LinearLayout
        android:id="@+id/bottom_sheet_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="56dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_insetEdge="bottom">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/messageColor"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Generation: 0"
                android:textColor="@color/cardColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/close_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:padding="10dp"
                android:text="x"
                android:textColor="@color/cardColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/second"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="66dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_insetEdge="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/gridEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="10dp"
                android:text="Enable grid"
                android:textColor="@color/system_for"
                app:buttonTint="@color/accent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Brush size"
                android:textColor="@color/system_for" />

            <com.google.android.material.slider.Slider
                android:id="@+id/node_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:stepSize="1"
                android:valueFrom="1"
                android:valueTo="5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Animation Delay (ms)"
                android:textColor="@color/system_for" />

            <com.google.android.material.slider.Slider
                android:id="@+id/speed_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:stepSize="1"
                android:valueFrom="0"
                android:valueTo="100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Rules"
                android:textColor="@color/system_for"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Generate when neighbour count"
                android:textColor="@color/system_for" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <CheckBox
                    android:id="@+id/gen_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/gen_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    app:buttonTint="@color/accent" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Survive when neighbour count"
                android:textColor="@color/system_for" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <CheckBox
                    android:id="@+id/sur_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    app:buttonTint="@color/accent" />

                <CheckBox
                    android:id="@+id/sur_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    app:buttonTint="@color/accent" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Rule"
                android:id="@+id/resetRule"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/appbar"
        app:layout_insetEdge="bottom"
        app:menu="@menu/menu_main"
        app:navigationIcon="@drawable/ic_round_settings_24"
        app:navigationIconTint="@color/system_for" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>